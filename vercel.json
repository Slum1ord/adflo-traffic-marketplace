{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "env": {
    "DATABASE_URL": {
      "description": "PostgreSQL database connection string",
      "required": true
    },
    "JWT_SECRET": {
      "description": "Secret key for JWT token signing",
      "required": true
    },
    "NEXT_PUBLIC_API_URL": {
      "description": "Backend API URL",
      "required": false
    }
  }
}
